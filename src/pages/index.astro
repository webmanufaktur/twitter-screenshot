---
import SettingsPanel from "../components/SettingsPanel.astro";
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clean Twitter Screenshots</title>
    <meta name="robots" content="index, follow" />
    <meta
      name="description"
      content="Twitter/X Screenshot template - create your Twitter/X screenshots without any noise."
    />
    <style>
      .fttext a {
        color: blue !important;
      }
      [x-cloak] {
        display: none;
      }
    </style>
  </head>
  <body
    class=""
    data-x-data="app"
    x-data="{ftname: '', fthandle: '', ftavatar: '', fttext: '', ftreplies: '69', ftretweets: '420', ftlikes: '1.337', ftstats: '31.415', ftbadge: 'ftbasic' }"
  >
    <div class="flex min-h-screen">
      <!-- TWEET -->
      <div
        class="flex flex-1 items-center justify-center bg-gradient-to-b from-purple-500 to-pink-500"
      >
        <div class="p-16">
          <div class="max-w-lg rounded-xl bg-white shadow-xl">
            <!-- TWITTER HEADER -->
            <div class="flex items-center px-6 py-4">
              <div class="mr-2">
                <img
                  :src="ftavatar"
                  class="block aspect-square h-12 w-full rounded-full object-cover"
                  alt=""
                  x-cloak
                  x-show="ftavatar"
                />
                <a href="https://webmanufaktur.net/" target="_blank">
                  <img
                    src="/images/profile_icon_2.jpg"
                    class="block h-12 w-12 rounded-full"
                    alt=""
                    x-cloak
                    x-show="!ftavatar"
                  /></a
                >
              </div>
              <div>
                <!-- HANDLE -->
                <span class="relative text-sm font-bold leading-tight">
                  <span x-text="ftname" x-cloak x-show="ftname"></span>
                  <span x-cloak x-show="!ftname">
                    <a href="https://abelt.de/" target="_blank"
                      >Alexander Abelt</a
                    >
                  </span>

                  <!-- Verified -->
                  <svg
                    viewBox="0 0 22 22"
                    aria-label="Verified account"
                    role="img"
                    class="absolute -right-[22px] -top-1 h-5 w-5 text-[#1da1f2]"
                    fill="currentColor"
                    x-cloak
                    x-show="ftbadge == 'ftverified'"
                  >
                    <g>
                      <path
